<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/headerLogueado') %>
			<!-- /Header -->

			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title">
								<a href="/usuarios/editarPerfil">
									<i class="fas fa-cog"></i>
								</a>
							</h1>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div>
							<ul class="">
								<li>8 productos</li>
								<li>200 seguidores</li>
								<li>300 comentarios</li>
							</ul>
						</div>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->

			<% for( let i=0; i < lista.length; i++ ) { %>

				<!-- Mis productos -->
				<div class="container products-wrapper">
					<div class="row">
						<div class="col-12">
							<h2 class="products-title">Mis productos</h2>
						</div>
						<!-- Show mis productos -->


						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/todosLosProductos">
									<figure class="product-box_image">
										<img src="<%= lista[i].imagen %>" alt="cafetera moulinex">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= lista[i].nombreDelProducto %>
										</h2>
										<p>
											<%= lista[i].Descripcion %>
										</p>

									</article>
									<article>
										<% for( let i=0; i < comentarios.length; i++ ) { %>

											<p>
											<p>
												<%=comentarios[i].textoDelComentario%>
											</p>
											</p>

											<% } %>
									</article>
								</a>
							</section>
						</div>
					</div>
				</div>
				<% } %>


					<!-- /Mis productos -->


					<!-- footer -->
					<%- include('./partials/footer') %>
						<!-- /footer -->
	</body>

</html>