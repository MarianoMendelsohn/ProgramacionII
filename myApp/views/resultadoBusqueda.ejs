<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

	<body>
		<%- include("./partials/ifHeader") %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Resultados de b√∫squeda</h2>			
					<div>
						<% for( let i=0; i < productos.length; i++ ) { %>
						

							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/product/product/<%= productos[i].id %>">
										<figure class="product-box_image">
											<img src="<%= productos[i].imagen %> " alt="burgas">
										</figure>
										<article class="product-box_data">
											<h2>
												<%= productos[i].titulo_producto %>
											</h2>
											<p>
												<%= productos[i].descripcion %>
											</p>
											<p>Comentarios: 5</p>
										</article>
									</a>
								</section>
							</div>
	
							<% } %>
					</div>

				</div>


				<!-- footer -->
				<%- include('./partials/footer') %>
					<!-- /footer -->
	</body>

</html>